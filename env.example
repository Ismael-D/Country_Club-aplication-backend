# =====================================================
# CONFIGURACIÓN DE LA BASE DE DATOS
# =====================================================

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/proyecto

# =====================================================
# CONFIGURACIÓN DEL SERVIDOR
# =====================================================

# Server Configuration
PORT=3000
NODE_ENV=development

# =====================================================
# CONFIGURACIÓN DE JWT
# =====================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# Clave secreta para sesiones
SESSION_SECRET=otra_clave_secreta_para_sesiones

# =====================================================
# CONFIGURACIÓN DEL CLUB
# =====================================================

# Información del club
CLUB_NAME=Country Club Premium
CLUB_ADDRESS=Dirección del Club
CLUB_PHONE=+1234567890
CLUB_EMAIL=info@club.com
CLUB_WEBSITE=https://club.com
CLUB_TIMEZONE=America/New_York

# =====================================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# =====================================================

# Habilitar envío de emails
EMAIL_ENABLED=false

# Configuración SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=tu_email@gmail.com
EMAIL_PASS=tu_password_de_aplicacion

# =====================================================
# CONFIGURACIÓN DE SMS (OPCIONAL)
# =====================================================

# Habilitar envío de SMS
SMS_ENABLED=false

# Proveedor de SMS
SMS_PROVIDER=twilio
SMS_API_KEY=tu_api_key_aqui

# =====================================================
# CONFIGURACIÓN DE LOGS
# =====================================================

# Logging
LOG_LEVEL=info

# Archivo de logs
LOG_FILE=./logs/app.log

# Tamaño máximo del archivo de log
LOG_MAX_SIZE=10m

# Número máximo de archivos de log
LOG_MAX_FILES=5

# =====================================================
# CONFIGURACIÓN DE REPORTES
# =====================================================

# Ruta de salida para reportes
REPORT_OUTPUT_PATH=./reports

# =====================================================
# CONFIGURACIÓN DE ARCHIVOS
# =====================================================

# Ruta de uploads
UPLOAD_PATH=./uploads

# Configuración CORS
CORS_ORIGIN=http://localhost:5173 